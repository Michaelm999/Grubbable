<h1><%= @user.name %></h1>
<h3 class="h3">Bio</h3>
<p id="bio"><%= @user.bio %></p>

<h3>Comments:</h3>
<ul class="comments">
  <% @user.comments.each do |c| %>
  <li>
  <%= c.content %> <br>
  -<%= c.user.name %>
  <%= link_to('Delete', @comment, method: :delete, data: {confirm: 'Are you certain?'}) %>
  </li>
  <% end %>
</ul>

<%= form_for [@user, Comment.new] do |a| %>
  <%= a.text_area :content, placeholder: 'Comments' %>
  <%= a.submit %>
<% end %>

<div class="tools">
<% if current_user.name = @user.name %>
<%= link_to('Edit Your Page', edit_user_path) %> <br>
<%= link_to('Delete Your Account', @user, method: :delete, data: {confirm: 'Are you certain?'}) %><br>
<%= link_to('Logout', logout_path, method: 'delete') %> <br>
<% end %>
<%= link_to('See the Others', users_path) %>


</div>
